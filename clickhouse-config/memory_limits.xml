<?xml version="1.0"?>
<clickhouse>
    <!-- 内存限制配置 - 适用于低内存服务器 (2.4GB) -->
    <!-- 服务器最大内存：800MB（降低以留更多内存给系统） -->
    <max_server_memory_usage>838860800</max_server_memory_usage>
    <max_server_memory_usage_to_ram_ratio>0.35</max_server_memory_usage_to_ram_ratio>
    <mark_cache_size>16777216</mark_cache_size>
    <uncompressed_cache_size>0</uncompressed_cache_size>
    
    <profiles>
        <default>
            <!-- 单个查询最大内存：300MB（降低） -->
            <max_memory_usage>314572800</max_memory_usage>
            <!-- 内存超限时溢出到磁盘 -->
            <max_bytes_before_external_group_by>104857600</max_bytes_before_external_group_by>
            <max_bytes_before_external_sort>104857600</max_bytes_before_external_sort>
            <!-- 限制并发查询数 -->
            <max_concurrent_queries>3</max_concurrent_queries>
        </default>
    </profiles>
</clickhouse>
