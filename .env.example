############################
# 基础服务配置
############################

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# 如需为 Redis 设置密码，可取消注释并在 redis.conf 中开启 requirepass
# REDIS_PASSWORD=your-redis-password

############################
# ClickHouse 配置
############################

CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=9000
CLICKHOUSE_DB=stock
CLICKHOUSE_USER=default
# 强烈建议在生产环境修改为复杂密码
CLICKHOUSE_PASSWORD=changeme

############################
# 通知服务配置（可选）
############################

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 邮箱
EMAIL_SMTP_HOST=smtp.qq.com
EMAIL_SMTP_PORT=465
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_TO=

# 企业微信
WECHAT_WEBHOOK_URL=

############################
# 日志 & API 配置
############################

# 日志级别：DEBUG / INFO / WARNING / ERROR
LOG_LEVEL=INFO

# API 监听地址与端口
API_HOST=0.0.0.0
API_PORT=8000

# 允许的前端来源，多个用逗号分隔
API_ALLOWED_ORIGINS=http://localhost:8000

# API 访问 Token（配置后，请求头需带 X-API-Token）
API_AUTH_TOKEN=please-change-me

# 超级管理员 Token（配置/重置账户等敏感操作）
# 不设置则默认回退为 API_AUTH_TOKEN
ADMIN_TOKEN=please-change-me-too

############################
# 管理员登录账号
############################

# 前端登录账号密码（默认 admin/admin，上线务必修改）
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin